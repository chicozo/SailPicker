
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/fondplanche"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/planche"
        android:id="@+id/plancheText"
        android:layout_gravity="center_horizontal"
        android:textColor="#ECF0F1"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:id="@+id/plancheButton"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/planche1"
        android:adjustViewBounds="true"
        android:padding="10px"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/voile"
        android:id="@+id/voileText"
        android:layout_gravity="center_horizontal"
        android:textColor="#ECF0F1"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:id="@+id/voileButton"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/planche2"
        android:adjustViewBounds="true"
        android:padding="10px"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Bon choix"
            android:id="@+id/enregistrer"
            android:textColor="#ECF0F1"
            android:background="#2980B9"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="mauvais choix"
            android:id="@+id/retour"
            android:textColor="#ECF0F1"
            android:background="#2980B9"/>

    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_gravity="center_horizontal" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/conseil"
        android:id="@+id/conseilText"
        android:layout_gravity="center_horizontal"
        android:textColor="#ECF0F1"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/confiance"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/circular_progressbar"
            android:secondaryProgress="0"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/txtProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignBottom="@+id/confiance"
            android:layout_centerInParent="true"
            android:textColor="#ECF0F1"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>

</LinearLayout>
